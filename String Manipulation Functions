//Reverse a String
function reverseString(str) {
    return str.split('').reverse().join('');
}


//Count Characters
function countCharacters(str) {
    return str.length;
}


//Capitalize Words
function capitalizeWords(sentence) {
    return sentence.replace(/\b\w/g, function(char) {
        return char.toUpperCase();
    });
}
